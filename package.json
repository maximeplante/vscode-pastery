{
    "name": "vscode-pastery",
    "displayName": "Pastery for VSCode",
    "description": "Upload to Pastery in a single keystroke",
    "repository": {
        "url": "https://github.com/maximeplante/vscode-pastery"
    },
    "version": "0.0.1",
    "publisher": "maximeplante",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vscode-pastery.upload"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "vscode-pastery.upload",
                "title": "Upload to Pastery"
            }
        ],
        "configuration": {
            "title": "vscode-pastery",
            "properties": {
                "vscode-pastery.api-key": {
                    "type": "string",
                    "default": "",
                    "description": "Find you Pastery api key on your account page at https://www.pastery.net/account/"
                }
            }
        },
        "keybindings": {
            "command": "vscode-pastery.upload",
            "key": "ctrl+alt+p",
            "mac": "ctrl+alt+p",
            "when": "editorTextFocus"
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/clipboardy": "^1.1.0",
        "axios": "^0.18.0",
        "clipboardy": "^1.2.3"
    }
}
